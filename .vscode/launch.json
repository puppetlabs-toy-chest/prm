  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (With Telemetry): prm --version",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "--version"
      ],
      "buildFlags": "-tags='telemetry' -ldflags='-X main.honeycomb_api_key=${input:honeycomb_api_key} -X main.honeycomb_dataset=pct_dev'",
    },
    {
      "name": "Debug (No Telemetry): prm --version",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "--version"
      ],
    },
    {
      "name": "Debug (No Telemetry): prm exec -l",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "exec",
        "-ld",
        "--toolpath",
        "${input:tool_path}"
      ],
    },
    {
      "name": "Debug (No Telemetry): prm exec puppetlabs/rubocop",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "exec",
        "puppetlabs/rubocop",
        "--toolpath",
        "${input:tool_path}"
      ],
    },
    {
      "name": "Debug (With Telemetry): prm set puppet 7",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "set",
        "puppet",
        "7"
      ],
      "buildFlags": "-tags='telemetry' -ldflags='-X main.honeycomb_api_key=${input:honeycomb_api_key} -X main.honeycomb_dataset=pct_dev'",
    },
    {
      "name": "Debug (No Telemetry): prm set puppet 7",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "set",
        "puppet",
        "7"
      ],
    },
    {
      "name": "Debug (With Telemetry): prm get puppet",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "get",
        "puppet",
      ],
      "buildFlags": "-tags='telemetry' -ldflags='-X main.honeycomb_api_key=${input:honeycomb_api_key} -X main.honeycomb_dataset=pct_dev'",
    },
    {
      "name": "Debug (No Telemetry): prm get puppet",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "get",
        "puppet",
      ],
    },
    {
      "name": "Debug (With Telemetry): prm set backend docker",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "set",
        "backend",
        "docker"
      ],
      "buildFlags": "-tags='telemetry' -ldflags='-X main.honeycomb_api_key=${input:honeycomb_api_key} -X main.honeycomb_dataset=pct_dev'",
    },
    {
      "name": "Debug (No Telemetry): prm set backend docker",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "set",
        "backend",
        "docker"
      ],
    },
    {
      "name": "Debug (With Telemetry): prm get backend",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "get",
        "backend",
      ],
      "buildFlags": "-tags='telemetry' -ldflags='-X main.honeycomb_api_key=${input:honeycomb_api_key} -X main.honeycomb_dataset=pct_dev'",
    },
    {
      "name": "Debug (No Telemetry): prm get backend",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "args": [
        "get",
        "backend",
      ],
    }
  ],
  "inputs": [
    {
      "id": "tool_path",
      "description": "The path to the folder containing PRM Tool Configs",
      "type": "promptString",
      "default": "${workspaceFolder}/../fantastic-adventure"
    },
    {
      "id": "honeycomb_api_key",
      "description": "The API Key for sending traces to Honeycomb",
      "type": "promptString",
    }
  ]
}
